<h1><%= libro ? 'Editar Libro' : 'Agregar Libro' %></h1>
<form action="<%= libro ? `/libros/${libro.id}?_method=PUT` : '/libros' %>" method="POST">
  <label for="titulo">Título:</label>
  <input type="text" id="titulo" name="titulo" value="<%= libro ? libro.titulo : '' %>" required>

  <label for="autor">Autor:</label>
  <input type="text" id="autor" name="autor" value="<%= libro ? libro.autor : '' %>" required>

  <label for="año_publicacion">Año de Publicación:</label>
  <input type="number" id="año_publicacion" name="año_publicacion" value="<%= libro ? libro.año_publicacion : '' %>">

  <label for="genero">Género:</label>
  <input type="text" id="genero" name="genero" value="<%= libro ? libro.genero : '' %>">

  <button type="submit"><%= libro ? 'Actualizar' : 'Guardar' %></button>
</form>

<a href="/">Cancelar</a>
