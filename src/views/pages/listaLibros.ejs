<h1>Lista de Libros</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Título</th>
      <th>Autor</th>
      <th>Año de Publicación</th>
      <th>Género</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% libros.forEach(libro => { %>
      <tr>
        <td><%= libro.id %></td>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.año_publicacion %></td>
        <td><%= libro.genero %></td>
        <td>
          <a href="/libros/<%= libro.id %>/editar">Editar</a>
          <form action="/libros/<%= libro.id %>/eliminar?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Eliminar</button>
        </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/libros/nuevo">Agregar Libro</a>
